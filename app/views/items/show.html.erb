<div class="row">
  <div class="col-md-4" id="item_image">
    <img src="<%= @item.image %>" alt="<%= @item.name %>" class="img-thumbnail"/>
  </div>

  <div class="col-md-8" id="item_details">
    <h2><%= @item.name %></h2>
    <p><%= @item.description %></p>
    <h5>$<%= @item.price %></h5>

    <% if @item.open? %>
      <% if @item.high_bid == 0.00 %>
      <p>
        No current bids
      </p>
      <% else %>
        Highest Bid: <%= @item.high_bid %><br>
        Highest Bidder: <%= format_bidder(@item.high_bidder) %>
      <% end %>
      <%= render partial: "new_bid", locals: {item: @item}%>
    <% else %>
      <p>
      This item's auction has ended!
      </p>
    <% end  %>
    <div> <%= link_to "Browse more items from #{@item.business.name}", business_path(@item.business.slug) %> </div>
  </div>
</div>
